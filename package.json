{
  "name": "deploy-checklist-bot",
  "version": "1.0.0",
  "description": "A GitHub App that uses Claude AI to analyze PR diffs and generate deploy checklists",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "probot run ./dist/index.js",
    "dev": "npx ts-node --esm src/index.ts",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "github-app",
    "probot",
    "deploy",
    "checklist",
    "claude"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.74.0",
    "minimatch": "^10.2.0",
    "probot": "^14.2.4",
    "yaml": "^2.8.2",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "^25.2.3",
    "smee-client": "^5.0.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
